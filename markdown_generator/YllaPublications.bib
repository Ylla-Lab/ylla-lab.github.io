issn = {25890042},
journal = {iScience},
month = {nov},
number = {12},
pages = {101778},
publisher = {Elsevier BV},
title = {{DNMT1 Promotes Genome Methylation and Early Embryo Development in Cockroaches}},
volume = {23},
