keywords = {Apricot,Genetic diversity,Germplasm,Microsatellites,Population structure,Prunus armeniaca L,SSR markers},
month = {aug},
number = {9},
pages = {1714},
publisher = {Multidisciplinary Digital Publishing Institute},
title = {{Molecular characterization of genetic diversity in apricot cultivars: Current situation and future perspectives}},
url = {https://www.mdpi.com/2073-4395/11/9/1714/htm https://www.mdpi.com/2073-4395/11/9/1714},
