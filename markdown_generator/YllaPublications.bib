issn = {15525015},
journal = {Journal of Experimental Zoology Part B: Molecular and Developmental Evolution},
keywords = {Blattella germanica,embryo development,hemimetabola,maternal–zygotic transition,small noncoding RNA},
month = {jul},
number = {5},
pages = {288--295},
pmid = {29975449},
publisher = {Wiley-Blackwell},
title = {{Diversity of piRNA expression patterns during the ontogeny of the German cockroach}},
url = {http://doi.wiley.com/10.1002/jez.b.22815},
