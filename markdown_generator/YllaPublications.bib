file = {:home/ysland/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ventos‐Alfonso, Ylla, Belles - 2019 - Zelda and the maternal‐to‐zygotic transition in cockroaches(2).pdf:pdf},
issn = {17424658},
journal = {FEBS Journal},
keywords = {embryogenesis,maternal-to-zygotic transition,metamorphosis,vielf{\"{a}}ltig,zelda},
month = {apr},
number = {16},
pages = {3206--3221},
pmid = {30993896},
publisher = {John Wiley & Sons, Ltd (10.1111)},
title = {{Zelda and the maternal-to-zygotic transition in cockroaches}},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/febs.14856},
